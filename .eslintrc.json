{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "max-len" : ["error", { "code": 80 }]
  },
  "overrides": [
    {
      "files": "dist/**",
      "rules": {
        "no-void": "off",
        "camelcase": "off",
        "max-len": "off"
      }
    }
  ]
}